<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group width-50 mb-4">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group width-50 mb-4">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group width-50 mb-4">
    <%= form.label :company_name %>
    <%= form.text_field :company_name, class: 'form-control' %>
  </div>

  <div class="form-group width-50 mb-4">
    <%= form.label :company_email %>
    <%= form.email_field :company_email, class: 'form-control' %>
  </div>

  <div class="form-group width-50 mb-4">
    <%= form.label :valid_until %>
    <%= form.date_field :deadline, class: 'form-control' %>
  </div>

  <div class="form-group width-50 mb-4">
    <%= form.label :category %>
    <%= form.text_field :category, class: 'form-control' %>
  </div>

  <div class="form-group width-50 mb-2">
    <%= form.submit submit, class: 'form-control' %>
  </div>
<% end %>
